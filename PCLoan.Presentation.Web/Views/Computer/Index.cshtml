
@{
    ViewBag.Title = "Index";
    Layout = "_LayoutWithoutNavbar";
}

<div class="container d-flex h-100">
    <div class="row align-self-center w-100">
        <div class="col-12 mx-auto mb-5">
            <p class="display-3 text-center">Hvad vil du?</p>
        </div>
    </div>
</div>
<div class="container d-flex h-100">
    <div class="row align-self-center w-100">
        <div class="col-10 offset-1">
            @using (Html.BeginForm("Index", "Computer", FormMethod.Post))
            {
                <div id="action" class="row text-center">
                    <div class="col-6 text-left">
                        @if (ViewBag.AvailableComputerAmount <= 0)
                        {
                            <button type="submit" class="btn btn-success p-3 text-decoration-none" name="submitButton" value="loan" disabled="disabled">Udlån</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success p-3 text-decoration-none" name="submitButton" value="loan">Udlån</button>
                        }
                    </div>
                    <div class="col-6 text-right">
                        <button type="submit" class="btn btn-danger p-3 text-decoration-none" name="submitButton" value="return">Aflever</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@if (ViewBag.AvailableComputerAmount <= 0)
{
    <div class="container d-flex h-100">
        <div class="row mt-1 align-self-center w-100">
            <div class="col-8 offset-2">
                <div class="alert alert-warning mx-auto d-block w-100">
                    <h4 class="alert-heading">Der kan ikke lånes computere!</h4>
                    <hr />
                    <p class="">Der kan desværre ikke lånes flere computere, da alle computere er udlånt. <br />Kom igen senere.</p>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        let keysPressed = {};

        document.addEventListener("keydown", (event) => {
            keysPressed[event.key] = true;

            if (keysPressed['Control'] && keysPressed['Alt'] && event.key == 'F9') {
                window.location = "https://localhost:44367/admin/index";
            }
        });

        document.addEventListener("keyup", (event) => {
            delete keysPressed[event.key];
        });


    </script>
}
