@model PCLoan.Presentation.Web.Models.ComputerModel

@{
    ViewBag.Title = "Rediger Pc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="row mt-3">
            <div class="col-4 offset-4">
                <h4 class="text-center">Rediger @Html.DisplayFor(model => model.Name)</h4>
            </div>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger form-text" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="form-group col-4 offset-4">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger form-text" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-4 offset-4">
                @Html.LabelFor(model => model.StateId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.StateId, new SelectList(Model.States, "Id", "State"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger form-text" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4 offset-4">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="form-group col-4 offset-4">
        @Html.ActionLink("Tilbage til oversigt", "Index")
    </div>
</div>
