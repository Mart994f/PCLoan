@model IEnumerable<PCLoan.Models.ComputerModel>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-10">
        <p class="h1 mt-4 font-weight-light">ZBC Computer Udlån - Administration</p>
    </div>
    <div class="col-2 text-right">
        <button class="btn btn-primary btn-lg mt-4" type="button" disabled onclick="">Tilføj Pc</button>
    </div>
</div>

<hr />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-4">
            <div class="row">
                <div class="col-1">
                    <p class="h4 font-weight-light py-1">@Html.DisplayFor(m => item.Id)</p>
                </div>
                <div class="col-11">
                    @Html.TextBoxFor(m => item.Name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => item.SelectedState, new { @class = "h4 font-weight-normal py-1" })
                </div>
                <div class="col-9">
                    @Html.DropDownListFor(m => item.SelectedState, new SelectList(item.states, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "State" })
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="row">
                <div class="col-6 pr-1">
                    @Html.LabelFor(m => item.LendBy, new { @class = "h4 font-weight-normal text-right py-1" })
                </div>
                <div class="col-6 pl-1">
                    <p class = "h4 font-weight-light text-left py-1">@Html.DisplayFor(m => item.LendBy)</p>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="row">
                <div class="col-5 offset-2">
                    <button class="btn btn-success" type="button" disabled onclick="">Gem</button>
                </div>
                <div class="col-5">
                    <button class="btn btn-danger" type="button" onclick="">Slet</button>
                </div>
            </div>
        </div>
    </div>
}