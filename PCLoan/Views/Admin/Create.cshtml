@model PCLoan.Models.ComputerModel

@{
    ViewBag.Title = "Tilføj Pc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <div class="row mt-3">
            <div class="col-4 offset-4">
                <h4 class="text-center">Tilføj ny Pc</h4>
            </div>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger form-text" })

        <div class="row">
            <div class="col-4 offset-4 form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control"} )
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger form-text" })
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-4 form-group">
                @Html.LabelFor(model => model.SelectedState, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.SelectedState, new SelectList(Model.States, "Value", "Text"), "---- Vælg Status ----", htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.SelectedState, "", new { @class = "text-danger form-text" })
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-4 form-group">
                <input type="submit" value="Tilføj" class="btn btn-primary" />
            </div>
        </div>
    </form>
}


<div class="row">
    <div class="col-4 offset-4">
        @Html.ActionLink("Tilbage til oversigt", "Index")
    </div>
</div>
